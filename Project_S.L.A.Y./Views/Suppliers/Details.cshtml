@model Project_S.L.A.Y.Models.Supplier

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<h4>Products from this Supplier</h4>
<table class="table table-sm table-primary">
    <tr>
        <th>Product Name</th>
    </tr>
    @foreach (Product product in Model.Products)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => product.ProductName)</td>
        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SupplierID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
