@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to Our Bank!</h1>

<a asp-action="Index" asp-controller="Products" class="btn btn-success">View Our Products</a>
<a asp-action="SeedPeople" asp-controller="Seed" class="btn btn-success">Seed Users</a>
<a asp-action="SeedRoles" asp-controller="Seed" class="btn btn-success">Seed Roles</a>
<a asp-action="SeedAccounts" asp-controller="Seed" class="btn btn-success">Seed Accounts</a>
<a asp-action="SeedStockPortfolios" asp-controller="Seed" class="btn btn-success">Seed Portfolios</a>
<a asp-action="SeedStockTypes" asp-controller="Seed" class="btn btn-success">Seed StockTypes</a>
<a asp-action="SeedStocks" asp-controller="Seed" class="btn btn-success">Seed Stocks</a>
<a asp-action="SeedTransactions" asp-controller="Seed" class="btn btn-success">Seed Transactions</a>
<a asp-action="SeedDisputes" asp-controller="Seed" class="btn btn-success">Seed Disputes</a>
<a asp-action="SeedStockTransactions" asp-controller="Seed" class="btn btn-success">Seed Stock Transactions</a>

@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Index" asp-controller="Orders" class="btn btn-info">View Orders</a>

    if (User.IsInRole("Admin"))
    {
        <a asp-action="Index" asp-controller="Suppliers" class="btn btn-danger">View Suppliers</a>
        <a asp-action="Index" asp-controller="RoleAdmin" class="btn btn-warning">Manage Users</a>
    }

}
