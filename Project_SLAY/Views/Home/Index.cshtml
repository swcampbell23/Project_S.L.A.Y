@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to Our Bookstore!</h1>

<a asp-action="Index" asp-controller="Products" class="btn btn-success">View Our Products</a>
<a asp-action="SeedUsers" asp-controller="Seed" class="btn btn-success">Seed Users</a>
<a asp-action="SeedRoles" asp-controller="Seed" class="btn btn-success">Seed Roles</a>



@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Index" asp-controller="Orders" class="btn btn-info">View Orders</a>

    if (User.IsInRole("Admin"))
    {
        <a asp-action="Index" asp-controller="Suppliers" class="btn btn-danger">View Suppliers</a>
        <a asp-action="Index" asp-controller="RoleAdmin" class="btn btn-warning">Manage Users</a>
    }

}
