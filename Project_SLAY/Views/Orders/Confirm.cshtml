@model Order

@{
    ViewData["Title"] = "Details";
}

<h2>Registration Orders</h2>
<h3>Are you sure you want to check out?</h3>
<a asp-action="Confirm" asp-route-id="@Model.OrderID" class="btn btn-primary">Checkout</a>
<a asp-action="Details" asp-route-id="@Model.OrderID" class="btn btn-primary">Cancel</a>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderNotes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderNotes)
        </dd>
    </dl>
</div>
<h5>Products on this Order</h5>
<table class="table table-primary">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Extended Price</th>
    </tr>
    @foreach (OrderDetail rd in Model.OrderDetails)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem => rd.Product.ProductName)</td>
            <td>@Html.DisplayFor(ModelItem => rd.ProductPrice)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Quantity)</td>
            <td>@Html.DisplayFor(ModelItem => rd.ExtendedPrice)</td>
        </tr>
    }
</table>

<h5>Order Summary</h5>
<table class="table table-sm table-bordered" style="width:30%">
    <tr>
        <th colspan="2" style="text-align:center">Order Summary</th>
    </tr>
    <tr>
        <td>Registration Subtotal:</td>
        <td>@Html.DisplayFor(model => model.OrderSubtotal)</td>
    </tr>
    <tr>
        <td>Service Fee:</td>
        <td>@Html.DisplayFor(model => model.TaxRate)</td>
    </tr>
    <tr>
        <td>Registration Total:</td>
        <td>@Html.DisplayFor(model => model.OrderTotal)</td>
    </tr>

</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
